# Cloudflare Pages - Redirects and Headers

# Redirect root to app
/ /app 200

# API routes to worker
/api/* https://ip-web-mobile.tu-cuenta.workers.dev/api/:splat 200

# Fallback for SPA
/app/* /app/index.html 200

# Static assets
/assets/* /assets/:splat 200
/static/* /static/:splat 200

# Health check
/health https://ip-web-mobile.tu-cuenta.workers.dev/api/health 200

# Default fallback
/* /app/index.html 200